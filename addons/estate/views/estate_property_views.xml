<odoo>
   <!-- Action  Estate Property--> 
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- search & filter -->
<record id="estate_property_search_filter_view" model="ir.ui.view">
    <field name="name">estate.property.search.filter</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="postcode"/>
            <field name="expected_price"/>
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="facades"/>
            <field name="property_type_id"/>
            <filter name="available" string="Available" domain="[('state', 'in',[ 'new', 'offer_received'])]" />
            <filter name="postcode" string="Postcode"  context="{'group_by':'postcode'}"/>
        </search>
    </field>
</record>


    <!-- tree view-->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>   
                 <field name="state"/>            
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <div>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group> 
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" groups="base.group_no_one"/>  
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                          <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                            
                          </group>
                        </page>
                        <page string="Other info"> 
                            <group>
                                <field name="salesperson_id"/>  
                                <field name="buyer_id"/>  
                            </group>
                        </page>
                        <page string="Offers">
                                 <field name="offer_ids"/>
                         </page>
                        <page string="Active"> 
                             <field name="active"/>  
                        </page>
                    </notebook>


                </sheet>
            </form>
        </field>
    </record>
</odoo>
